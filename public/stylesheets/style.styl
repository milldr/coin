:root
  --primary-bg-color: #E7E7DE
  --secondary-bg-color: #0F3057
  --third-bg-color: #CDCBA6
  --header-bg-color: #0F3057
  --div-bg-color: #CDCBA6
  --light-text: #E7E7DE
  --dark-text: #0F3057

h1, a, h2
  font-family: 'Montserrat', sans-serif;
  letter-spacing: 3px

body
  font-family: 'Open Sans', sans-serif;
  margin: 0
  background-color: var(--primary-bg-color)
  color: var(--dark-text)

a
  color: var(--light-text)

a.anchor
    display: block
    position: relative
    top: -50px;
    visibility: hidden

ul
  list-style-type: none
  margin:0

ul li
  list-style-type: none
  margin: 0
  padding: 0

.container
  padding: 16px

.dev
  display: inline-block
  height: 100px
  width: 100px
  background: var(--div-bg-color)
  text-align: center
  margin: 20px 5px 0px 5px

.dev-container
  text-align: justify

.dev-divs
  float: right

  position: relative
  left: -50%; /* or right 50% */
  text-align: left

  ul
    position: relative
    left: 100%

  ul li
    float: right

// .dev-text
//   visibility: hidden
//
// .dev-text:hover
//   visibility: show

.header-edit
  position: fixed
  top: 0
  width: 100%

  .header-title
    font-size: 20px
    -webkit-transition:font-size 300ms ease-in-out, height 300ms ease-in-out;
    -moz-transition:font-size 300ms ease-in-out, height 300ms ease-in-out;
    -o-transition:font-size 300ms ease-in-out, height 300ms ease-in-out;
    transition:font-size 300ms ease-in-out, height 300ms ease-in-out;

.footer
  background: var(--header-bg-color)
  height: 300px

  h2
    color: var(--light-text)

#header
  position: fixed
  top: 0
  width: 100%

  padding: 10px 0px
  height: 50px

  background: var(--header-bg-color)

  a
    text-decoration: none

.header-title-container, .header-nav-container
  display: inline-block

.header-nav-container
  float: right
  padding-right: 5vw

.header-title-container
  padding-left: 5vw

.header-nav-item, .dev-li
  display: inline
  padding: 5px 10px

.header-title, .header-nav-link
  text-transform: uppercase

.header-title
  font-size: 30px
  -webkit-transition:font-size 300ms ease-in-out, height 300ms ease-in-out;
  -moz-transition:font-size 300ms ease-in-out, height 300ms ease-in-out;
  -o-transition:font-size 300ms ease-in-out, height 300ms ease-in-out;
  transition:font-size 300m

.header-nav-link
  font-size: 16px

#home
  text-align: center

  background: var(--secondary-bg-color) /* For browsers that do not support gradients */
  background: -webkit-linear-gradient(var(--secondary-bg-color) 70%, var(--primary-bg-color)); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(var(--secondary-bg-color) 70%, var(--primary-bg-color)); /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(var(--secondary-bg-color) 70%, var(--primary-bg-color)); /* For Firefox 3.6 to 15 */
  background: linear-gradient(var(--secondary-bg-color) 70%, var(--primary-bg-color)); /* Standard syntax */


#home
  p, h1
    padding: 0 20vw
    color: var(--light-text)

  h1
    padding-top: 100px
    font-size: 50px

  p
    font-size: 30px


.float-divs
  position: relative


  ul
    position: relative
    text-align: center

  ul li
    display: inline-block

.float-div
  display: inline-block
  height: 300px
  width: 350px
  background: var(--div-bg-color)
  text-align: center
  margin: 10px 20px

.float-divs-container
  padding: 15vh 5vw
  text-align: justify

.section-container
  padding: 16px 15vw
  text-align: justify

  h1
    text-align: center
